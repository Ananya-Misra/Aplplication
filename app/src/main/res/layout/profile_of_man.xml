<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRootLayout"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlLeftLayout"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:background="@color/sea_green">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/image_border"
            android:src="@drawable/profilemen" />
        <TextView
            android:id="@+id/tvContact"
            android:layout_below="@+id/imgProfile"
            android:padding="4dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:textColor="@color/white"/>
        <View
            android:id="@+id/vBelowCantact"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:padding="4dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tvContact"
            android:background="@color/white"
            />
        <ImageView
            android:id="@+id/imgCall"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@+id/vBelowCantact"
            android:src="@drawable/ic_contact"/>
        <TextView
            android:id="@+id/tvCall"
            android:layout_below="@+id/tvContact"
            android:layout_toRightOf="@+id/imgCall"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/phone"
            />
        <TextView android:id="@+id/tvCallInfo"
            android:layout_below="@+id/tvCall"
            android:layout_toRightOf="@+id/imgCall"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="@string/phone_info"
            android:layout_marginBottom="5dp"
            />



        <ImageView
            android:id="@+id/imgMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tvCallInfo"
            android:src="@drawable/ic_mail"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_below="@+id/tvCallInfo"
            android:layout_toRightOf="@+id/imgMail"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:text="@string/email"
            />
        <TextView android:id="@+id/tvEmailInfo"
            android:layout_below="@+id/tvEmail"
            android:layout_toRightOf="@+id/imgMail"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:text="@string/email_info"/>


        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/tvEmailInfo"
            android:src="@drawable/ic_home"/>
        <TextView
            android:id="@+id/tvAddress"
            android:layout_below="@+id/tvEmailInfo"
            android:layout_toRightOf="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/location"
            />
        <TextView android:id="@+id/tvAddressInfo"
            android:layout_below="@+id/tvAddress"
            android:layout_toRightOf="@+id/imgMail"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:text="@string/address_info"/>


        <TextView
            android:id="@+id/tvDOB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddressInfo"
            android:layout_marginTop="6dp"
            android:text="@string/d_o_b"
            android:padding="4dp"
            android:textColor="@color/white"/>
        <View
            android:id="@+id/vBelowDOB"
            android:layout_marginLeft="5dp"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:padding="4dp"
            android:layout_below="@+id/tvDOB"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvDOBInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@+id/vBelowDOB"
            android:text="@string/date_info"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@+id/tvDOBInfo"
            android:text="@string/cast"
            android:textColor="@color/white"/>
        <View
            android:id="@+id/vBelowCast"
            android:layout_marginLeft="5dp"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:padding="4dp"
            android:layout_below="@+id/tvCast"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvCastInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vBelowCast"
            android:text="@string/cast_info"
            android:padding="4dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvNative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@+id/tvCastInfo"
            android:text="@string/native_place"
            android:textColor="@color/white"/>
        <View
            android:id="@+id/vBelowNative"
            android:layout_marginLeft="5dp"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tvNative"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/tvNativeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@+id/vBelowNative"
            android:text="@string/address_info"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlRightLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/rlLeftLayout">
        <View
            android:id="@+id/vAboveName"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_below="@id/vAboveName"
            android:textColor="@color/black"
            android:text="@string/sara_bellum"/>
        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_below="@id/tvFullName"
            android:textColor="@color/sea_green"
            android:text="TONDON"/>
        <TextView
            android:id="@+id/tvEducationInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLastName"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black"
            android:text="@string/education_info"/>
        <View
            android:id="@+id/vBelowName"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvEducationInfo"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tvPersonalDetails"
            android:layout_below="@+id/vBelowName"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_details"/>
        <View
            android:id="@+id/vBelowPersonalDetails"
            android:layout_marginLeft="5dp"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tvPersonalDetails"
            android:background="@color/sea_green"/>
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/vBelowPersonalDetails"
            android:padding="2dp"
            android:text="@string/time"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tvTime"
            android:padding="2dp"
            android:text="@string/age"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_marginLeft="5dp"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvAge"
            android:padding="2dp"
            android:text="@string/weight"
            android:textColor="@color/black"
            android:textSize="8sp" />
        <TextView
            android:id="@+id/tvTimeInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/vBelowPersonalDetails"
            android:layout_toRightOf="@+id/tvTime"
            android:padding="2dp"
            android:text="@string/time_info"
            android:textColor="@color/black"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/tvAgeInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/tvTimeInfo"
            android:layout_toRightOf="@+id/tvAge"
            android:padding="2dp"
            android:text="@string/age_info"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvWeightInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/tvAgeInfo"
            android:layout_toRightOf="@+id/tvWeight"
            android:padding="2dp"
            android:text="@string/weight_info"
            android:textColor="@color/black"
            android:textSize="8sp" />
        <TextView
            android:id="@+id/tvFamilyBackground"
            android:layout_below="@+id/tvWeight"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/family_background"/>
        <View
            android:id="@+id/vBelowFamilyBackground"
            android:layout_marginLeft="5dp"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tvFamilyBackground"
            android:background="@color/sea_green"/>
        <TextView
            android:id="@+id/tvFatherName"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/vBelowFamilyBackground"
            android:padding="2dp"
            android:text="Father Name"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvMotherName"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tvFatherName"
            android:padding="2dp"
            android:text="Mother Name"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvContactNo"
            android:layout_marginStart="5dp"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvMotherName"
            android:padding="2dp"
            android:text="Contact No"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvElderBrother"
            android:layout_marginLeft="5dp"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tvContactNo"
            android:padding="2dp"
            android:text="Elder Brother"
            android:textColor="@color/black"
            android:textSize="8sp" />
        <TextView
            android:id="@+id/tvFatherInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/vBelowFamilyBackground"
            android:layout_toRightOf="@+id/tvFatherName"
            android:padding="2dp"
            android:text="@string/time_info"
            android:textColor="@color/black"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/tvMotherInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/tvFatherInfo"
            android:layout_toRightOf="@+id/tvMotherName"
            android:padding="2dp"
            android:text="@string/age_info"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvContactInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/tvMotherInfo"
            android:layout_toRightOf="@+id/tvContactNo"
            android:padding="2dp"
            android:text="@string/weight_info"
            android:textColor="@color/black"
            android:textSize="8sp" />
        <TextView
            android:id="@+id/tvElderInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/tvContactInfo"
            android:layout_toRightOf="@+id/tvElderBrother"
            android:padding="2dp"
            android:text="@string/weight_info"
            android:textColor="@color/black"
            android:textSize="8sp" />
        <TextView
            android:id="@+id/tvMaternalBackground"
            android:layout_below="@+id/tvElderBrother"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATERNAL BACKGROUND"/>
        <View
            android:id="@+id/vBelowMaternalBackground"
            android:layout_marginLeft="5dp"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_below="@+id/tvMaternalBackground"
            android:background="@color/sea_green"/>
        <TextView
            android:id="@+id/tvUncleName"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/vBelowMaternalBackground"
            android:padding="2dp"
            android:text="@string/father_name"
            android:textColor="@color/black"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tvUncleName"
            android:padding="2dp"
            android:text="@string/place"
            android:textColor="@color/black"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/tvUncleInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/vBelowMaternalBackground"
            android:layout_toRightOf="@+id/tvUncleName"
            android:padding="2dp"
            android:text="@string/time_info"
            android:textColor="@color/black"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/tvPlaceInfo"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/tvUncleInfo"
            android:layout_toRightOf="@+id/tvPlace"
            android:padding="2dp"
            android:text="@string/age_info"
            android:textColor="@color/black"
            android:textSize="8sp" />





    </RelativeLayout>

</RelativeLayout>
</ScrollView>