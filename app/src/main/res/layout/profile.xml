<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/topHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/dark_blue">

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/sara_bellum"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:id="@+id/vForName"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/tvFullName"
                android:background="@color/white" />

            <View
                android:id="@+id/vForImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvFullName"
                android:layout_marginTop="40dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rlRootLayout"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/tvFullName"
                android:layout_marginTop="50dp"
                android:background="@color/black">

                <TextView
                    android:id="@+id/tvDOBInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="49dp"
                    android:text="@string/date_info"
                    android:textColor="@color/white" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/tvFullName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/sara_bellum"
                android:src="@drawable/profilemen" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlExpectationsLayout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topHeader"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/grey"
            android:padding="2dp">

            <TextView
                android:id="@+id/tvExpectation"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="@string/expectations"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvExpectationsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vForExpectations"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="@string/expectation_info"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <View
                android:id="@+id/vForExpectations"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tvExpectation"
                android:layout_margin="4dp"
                android:background="@color/black"
                android:padding="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlOccupationLayout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlExpectationsLayout"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/dark_blue"
            android:padding="2dp">

            <TextView
                android:id="@+id/tvOccupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="@string/occupation"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvOccupationInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vForOccupation"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="@string/occupation_info"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <View
                android:id="@+id/vForOccupation"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tvOccupation"
                android:layout_margin="4dp"
                android:background="@color/white"
                android:padding="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlContactLayout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlOccupationLayout"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="#2c2c2c"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:padding="4dp"
                android:text="@string/contact"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCallInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vForContact"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="@string/phone_info"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvAddressInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCallInfo"
                android:padding="4dp"
                android:text="@string/address_info"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvEmailInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddressInfo"
                android:padding="4dp"
                android:text="@string/email_info"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <View
                android:id="@+id/vForContact"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tvContact"
                android:background="@color/white"
                android:padding="6dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topHeader"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/rlContactLayout">

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                android:text="@string/about"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAboutInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vForAbout"
                android:padding="4dp"
                android:text="@string/about_details"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAboutInfo"
                android:padding="2dp"
                android:text="@string/language"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLanguageInfo"
                android:padding="2dp"
                android:text="@string/time"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTimeInfo"
                android:padding="2dp"
                android:text="@string/age"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAgeInfo"
                android:padding="2dp"
                android:text="@string/weight"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWeightInfo"
                android:padding="2dp"
                android:text="@string/height"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvBloodGroup"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeightInfo"
                android:padding="2dp"
                android:text="@string/blood_group"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvHobbies"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBloodGroupInfo"
                android:padding="2dp"
                android:text="@string/hobbies"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvEducation"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHobbiesInfo"
                android:padding="2dp"
                android:text="@string/education"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvReligion"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEducationInfo"
                android:padding="2dp"
                android:text="@string/religon"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvSalary"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvReligionInfo"

                android:padding="2dp"
                android:text="@string/salary"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvBirthPlace"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSalaryInfo"
                android:padding="2dp"
                android:text="@string/birth_place"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBirthPlaceInfo"
                android:padding="2dp"
                android:text="@string/city"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvLanguageInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAboutInfo"
                android:layout_toEndOf="@+id/tvLanguage"
                android:padding="2dp"
                android:text="@string/language_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvTimeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLanguageInfo"
                android:layout_toEndOf="@+id/tvTime"
                android:padding="2dp"
                android:text="@string/time_info"
                android:textColor="@color/black"
                android:textSize="8sp" />


            <TextView
                android:id="@+id/tvAgeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTimeInfo"
                android:layout_toEndOf="@+id/tvAge"
                android:padding="2dp"
                android:text="@string/age_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvWeightInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAgeInfo"
                android:layout_toEndOf="@+id/tvWeight"
                android:padding="2dp"
                android:text="@string/weight_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvHeightInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWeightInfo"
                android:layout_toEndOf="@+id/tvHeight"
                android:padding="2dp"
                android:text="@string/height_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvBloodGroupInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeightInfo"
                android:layout_toEndOf="@+id/tvBloodGroup"
                android:padding="2dp"
                android:text="@string/blood_group_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvHobbiesInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBloodGroupInfo"
                android:layout_toEndOf="@+id/tvHobbies"
                android:padding="2dp"
                android:text="@string/hobbies_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvEducationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHobbiesInfo"
                android:layout_toEndOf="@+id/tvEducation"
                android:padding="2dp"
                android:text="@string/education_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvReligionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEducationInfo"
                android:layout_toEndOf="@+id/tvReligion"
                android:padding="2dp"
                android:text="@string/religon_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvSalaryInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvReligionInfo"
                android:layout_toEndOf="@+id/tvSalary"
                android:padding="2dp"
                android:text="@string/salary_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvBirthPlaceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSalaryInfo"
                android:layout_toEndOf="@+id/tvBirthPlace"
                android:padding="2dp"
                android:text="@string/birthplace_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvCityInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBirthPlaceInfo"
                android:layout_toEndOf="@+id/tvCity"
                android:padding="2dp"
                android:text="@string/city_info"
                android:textColor="@color/black"
                android:textSize="8sp" />


            <TextView
                android:id="@+id/tvFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCityInfo"
                android:layout_marginStart="9dp"
                android:layout_marginTop="8dp"
                android:text="@string/family_background"
                android:textAllCaps="true"
                android:textColor="@color/dark_blue"
                android:textSize="12sp" />

            <View
                android:id="@+id/vForFamily"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tvFamily"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tvFatherName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vForFamily"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:text="@string/father_name"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvMotherName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFatherNameInfo"
                android:padding="4dp"
                android:text="@string/mother_name"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvSibling"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMotherNameInfo"
                android:padding="4dp"
                android:text="@string/sibling"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvFatherNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vForFamily"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/tvFatherName"
                android:padding="4dp"
                android:text="@string/date_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvMotherNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFatherNameInfo"
                android:layout_toEndOf="@+id/tvMotherName"
                android:padding="4dp"
                android:text="@string/hobbies_info"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tvSiblingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMotherNameInfo"
                android:layout_toEndOf="@+id/tvSibling"
                android:padding="4dp"
                android:text="@string/sibling_info"
                android:textColor="@color/black"
                android:textSize="8sp" />


            <View
                android:id="@+id/vForAbout"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tvAbout"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:background="@color/black" />


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>