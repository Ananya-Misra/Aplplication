<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llFirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d4d4d4"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llFirst"
            android:layout_margin="14dp"
            android:background="#e9e9e9"
            android:baselineAligned="true"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"

                    android:padding="3dp"
                    android:text="@string/sara_bellum"
                    android:textColor="@color/brown"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFullName"
                    android:layout_marginTop="10dp"
                    android:padding="4dp"
                    android:text="@string/about"
                    android:textColor="@color/brown"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAboutInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAbout"
                    android:padding="4dp"
                    android:text="@string/about_details"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvHeight"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAboutInfo"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:text="@string/height"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHeightInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/age"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAgeInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/weight"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvWeightInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/time"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvBloodGroup"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTimeInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/blood_group"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvDOB"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBloodGroupInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/d_o_b"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvHobbies"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDOBInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/hobbies"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHobbiesInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/language"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvEducation"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLanguageInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/education"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvReligion"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEducationInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/religon"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvSalary"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvReligionInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/salary"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvBirthPlace"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSalaryInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/birth_place"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBirthPlaceInfo"
                    android:layout_marginStart="5dp"
                    android:padding="2dp"
                    android:text="@string/city"
                    android:textColor="@color/brown"
                    android:textSize="9sp" />


                <TextView
                    android:id="@+id/tvHeightInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAboutInfo"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/tvHeight"
                    android:padding="2dp"
                    android:text="@string/height_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />


                <TextView
                    android:id="@+id/tvAgeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHeightInfo"
                    android:layout_toRightOf="@+id/tvAge"
                    android:padding="2dp"
                    android:text="@string/age_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvWeightInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAgeInfo"
                    android:layout_toEndOf="@+id/tvWeight"
                    android:padding="2dp"
                    android:text="@string/weight_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvTimeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvWeightInfo"
                    android:layout_toEndOf="@+id/tvTime"
                    android:padding="2dp"
                    android:text="@string/time_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvBloodGroupInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTimeInfo"
                    android:layout_toEndOf="@+id/tvBloodGroup"
                    android:padding="2dp"
                    android:text="@string/blood_group_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvDOBInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBloodGroupInfo"
                    android:layout_toEndOf="@+id/tvDOB"
                    android:padding="2dp"
                    android:text="@string/date_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvHobbiesInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDOBInfo"
                    android:layout_toEndOf="@+id/tvHobbies"
                    android:padding="2dp"
                    android:text="@string/hobbies_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvLanguageInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHobbiesInfo"
                    android:layout_toEndOf="@+id/tvLanguage"
                    android:padding="2dp"
                    android:text="@string/language_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvEducationInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLanguageInfo"
                    android:layout_toEndOf="@+id/tvEducation"
                    android:padding="2dp"
                    android:text="@string/education_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvReligionInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEducationInfo"
                    android:layout_toEndOf="@+id/tvReligion"
                    android:padding="2dp"
                    android:text="@string/religon_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvSalaryInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvReligionInfo"
                    android:layout_toEndOf="@+id/tvSalary"
                    android:padding="2dp"
                    android:text="@string/salary_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvBirthPlaceInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSalaryInfo"
                    android:layout_toEndOf="@+id/tvBirthPlace"
                    android:padding="2dp"
                    android:text="@string/birthplace_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvCityInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBirthPlaceInfo"
                    android:layout_toEndOf="@+id/tvCity"
                    android:padding="2dp"
                    android:text="@string/city_info"
                    android:textColor="@color/black"
                    android:textSize="9sp" />


                <TextView
                    android:id="@+id/tvContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCityInfo"
                    android:layout_marginTop="15dp"
                    android:padding="4dp"
                    android:text="@string/contact"
                    android:textColor="@color/brown"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvContact"
                    android:padding="4dp"
                    android:text="@string/call"
                    android:textColor="@color/brown"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvCallInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCall"
                    android:padding="4dp"
                    android:text="@string/phone_info"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCallInfo"
                    android:padding="4dp"
                    android:text="@string/address"
                    android:textColor="@color/brown"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvAddressInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAddress"
                    android:padding="4dp"
                    android:text="@string/address_info"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAddressInfo"
                    android:padding="4dp"
                    android:text="@string/email"
                    android:textColor="@color/brown"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvEmailInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEmail"
                    android:padding="4dp"
                    android:text="@string/email_info"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profileholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/imgProfile"
                    android:alpha="0.6"
                    android:background="@color/brown" />

                <TextView
                    android:id="@+id/tvOccupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgProfile"
                    android:layout_marginTop="15dp"
                    android:padding="2dp"
                    android:textAllCaps="true"
                    android:text="@string/occupation"
                    android:textColor="@color/brown"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvOccupationInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvOccupation"
                    android:padding="2dp"
                    android:text="@string/occupation_info"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvExpectations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvOccupationInfo"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:text="@string/expectations"
                    android:textColor="@color/brown"
                    android:textSize="12sp"  />

                <TextView
                    android:id="@+id/tvExpectationsInfo"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvExpectations"
                    android:layout_marginBottom="10dp"
                    android:padding="2dp"
                    android:text="@string/expectation_info"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tvFamily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvExpectationsInfo"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:textColor="@color/brown"
                    android:textSize="12sp"
                    android:text="@string/family_background"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/tvFatherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFamily"
                    android:padding="2dp"
                    android:text="@string/father_name"
                    android:textColor="@color/brown"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvFatherNameInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFatherName"
                    android:padding="2dp"
                    android:text="@string/father_info"
                    android:textColor="@color/black"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tvMotherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFatherNameInfo"
                    android:padding="2dp"
                    android:text="@string/mother_name"
                    android:textColor="@color/brown"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvMotherNameInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMotherName"
                    android:padding="2dp"
                    android:text="@string/mother_info"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
                <TextView
                    android:id="@+id/tvSibling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMotherNameInfo"
                    android:padding="2dp"
                    android:text="@string/sibling"
                    android:textColor="@color/brown"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvSiblingInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSibling"
                    android:padding="2dp"
                    android:text="@string/sibling_info"
                    android:textColor="@color/black"
                    android:textSize="8sp" />


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>